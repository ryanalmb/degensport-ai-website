---
import '../styles/global.css'

const basePath = import.meta.env.BASE_URL || '/';
let canonicalHref = basePath;
let ogImageHref = basePath + 'og-image.svg';
const faviconHref = basePath + 'favicon.svg';
const appleTouchHref = basePath + 'apple-touch-icon.png';
const favicon32Href = basePath + 'favicon-32x32.png';
const favicon16Href = basePath + 'favicon-16x16.png';
try {
  if (Astro.site) {
    const absBase = new URL(basePath, Astro.site);
    canonicalHref = absBase.toString();
    ogImageHref = new URL('og-image.svg', absBase).toString();
  }
} catch {}
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Resource hints -->
    <link rel="preload" href={faviconHref} as="image" type="image/svg+xml" />
    
    <!-- SEO Meta Tags -->
    <title>degensport.AI — Live Degen Sports Intelligence (NFA)</title>
    <meta name="description" content="Sports alpha for degens: live research, typed updates, ruthless summaries, and a utility token launching soon on Solana. Always NFA." />
    <meta name="keywords" content="sports, betting, odds, predictions, AI, machine learning, sports intelligence, degen, telegram, solana, crypto" />
    <meta name="author" content="degensport.AI" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonicalHref} />
    
    <!-- Open Graph / Social Meta Tags -->
    <meta property="og:title" content="degensport.AI — Live Degen Sports Intelligence (NFA)" />
    <meta property="og:description" content="Sports alpha for degens: live research, typed updates, ruthless summaries, and a utility token launching soon on Solana. Always NFA." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://degensport.ai/" />
    <meta property="og:image" content={ogImageHref} />
    <meta property="og:image:alt" content="degensport.AI - Live Degen Sports Intelligence" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:site_name" content="degensport.AI" />
    
    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="degensport.AI — Live Degen Sports Intelligence (NFA)" />
    <meta name="twitter:description" content="Sports alpha for degens: live research, typed updates, ruthless summaries, and a utility token launching soon on Solana. Always NFA." />
    <meta name="twitter:image" content={ogImageHref} />
    <meta name="twitter:image:alt" content="degensport.AI - Live Degen Sports Intelligence" />
    <meta name="twitter:site" content="@degensportAI" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href={faviconHref} />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    
    <!-- Preload critical resources -->
    <link rel="preload" href={faviconHref} as="image" type="image/svg+xml" />
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;600;700&display=swap" as="style" />
    <link rel="preload" href="https://cdn.jsdelivr.net/npm/alpinejs@3.x/dist/cdn.min.js" as="script" />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- DNS prefetching for external domains -->
    <link rel="dns-prefetch" href="https://fonts.googleapis.com">
    <link rel="dns-prefetch" href="https://fonts.gstatic.com">
    <link rel="dns-prefetch" href="https://cdn.jsdelivr.net">
    <!-- Alpine.js for interactive components -->
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x/dist/cdn.min.js" integrity="sha384-AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA" crossorigin="anonymous"></script>
  </head>
  <body>
    <!-- Skip to content link for accessibility -->
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-neon-teal text-dark-bg px-4 py-2 rounded font-bold z-50">Skip to main content</a>
    
    <slot />
    
    <!-- Smooth scrolling for anchor links -->
    <script>
      document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
          e.preventDefault();
          const target = document.querySelector(this.getAttribute('href'));
          if (target) {
            target.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        });
      });
    </script>
    
    <!-- Performance detection for glitch effects -->
    <script>
      // Simple performance test
      function isHighPerformanceDevice() {
        // Check if device has sufficient performance for glitch effects
        // This is a simplified test - in a real implementation, you might want
        // to do more comprehensive performance testing
        const isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
        const isLowEndDevice = navigator.hardwareConcurrency && navigator.hardwareConcurrency <= 2;
        
        // Enable full effects on desktop devices with sufficient cores
        return !isMobile && !isLowEndDevice;
      }
      
      // Apply reduced effect class to glitch elements on lower performance devices
      document.addEventListener('DOMContentLoaded', function() {
        if (!isHighPerformanceDevice()) {
          const glitchElements = document.querySelectorAll('.glitch');
          glitchElements.forEach(function(el) {
            el.classList.add('reduced-effect');
          });
        }
      });
    </script>
  </body>
</html>